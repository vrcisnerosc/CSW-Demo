@model CSW.BookLibrary.Site.Models.Author

<div class="modal fade" id="authorModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        @using (Html.BeginForm("Update", "Author", FormMethod.Post))
        {
            <div class="modal-content">
                <div class="modal-header panel-primary">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="false">&times;</span></button>
                    <h4 class="modal-title">Author Edition</h4>
                </div>
                <div class="modal-body">
                    <form name="form">
                        <div class="row form-group">
                            <div class="col-lg-3">
                                <label for="id">Id: </label>
                            </div>
                            <div class="col-lg-9">
                               @Html.TextBoxFor(m => m.Id, new { @readonly = "readonly", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-lg-3">
                                <label for="name">First Name: </label>
                            </div>
                            <div class="col-lg-9">
                               @Html.TextBoxFor(m => m.FirstName, new { required = "", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-lg-3">
                                <label for="description">Last Name: </label>
                            </div>
                            <div class="col-lg-9">
                               @Html.TextBoxFor(m => m.LastName, new { required = "", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-lg-3">
                                <label for="description">Country: </label>
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => m.Country, new { required = "", @class = "form-control" })
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Save" formaction="/author/update" class="btn btn-primary" />
                    <input type="submit" value="Cancel" formaction="/author/cancel/@Model.Id" class="btn btn-default" formnovalidate  />
                </div>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#authorModal').modal('show');
    });
</script>